<%- include('./layout/head') %>
    <%- include('./layout/navbar') %>
        <div style="margin-top: 20px;" class="content-wrapper">

            <div class="content-header">
                <div class="container">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">
                                <%= tittle %>
                            </h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item">
                                    <a href="/Admin">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Admin/doctors">List Dokter</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <%= tittle %>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <div class="content-wrapper">

                <div class="content-header">

                    <div align="center">
                        <div class="container">

                            <div class="card">
                                <div class="card-body">
                                    <form action="/Admin/doctors/Add" method="POST">

                                        <div class="form-group col-sm-6" align="left">
                                            <label for="nama">Name</label>
                                            <input class="form-control" type="text" id="nama" name="nama">
                                        </div>


                                        <div class="form-group col-sm-6" align="left">
                                            <label for="foto">Foto Dokter</label>
                                            <input class="form-control" type="text" id="foto" name="foto">
                                        </div>


                                        <div class="form-group col-sm-6" align="left">
                                            <label for="biaya">Biaya</label>
                                            <input type="number" class="form-control" id="biaya" name="biaya">
                                        </div>

                                        <div class="form-group col-sm-6" align="left">
                                            <label for="specialist">Specialist</label>
                                            <select class="form-control" id="specialist" name="specialist">
                                                <option value="">--Select One--</option>
                                                <% data.forEach(el=>{%>
                                                    <option value="<%= el.id %>">
                                                        <%= el.name %>
                                                    </option>
                                                    <%}) %>
                                            </select>
                                        </div>


                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </form>

                                </div>
                            </div>
                        </div>



                    </div>


                </div>
            </div>
        </div>
        <%- include('./layout/footer') %>